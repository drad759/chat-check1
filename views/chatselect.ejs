<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat Links</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f2f2f2;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      animation: backgroundAnimation 30s infinite linear;
    }

    @keyframes backgroundAnimation {
      0% { background-color: #62c2cc; }
      20% { background-color: #f78fb3; }
      40% { background-color: #fad961; }
      60% { background-color: #7cf2cf; }
      80% { background-color: #a0d468; }
      100% { background-color: #62c2cc; }
    }

    .container {
      text-align: center;
      padding: 40px;
      background-color: rgba(255, 255, 255, 0.5);
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      position: relative;
    }

    h1 {
      color: #333;
      margin-bottom: 40px;
    }

    .link-container {
      margin-bottom: 20px;
      position: relative;
    }

    .link-container a {
      display: inline-block;
      padding: 15px 30px;
      background-color: #007bff;
      color: #fff;
      text-decoration: none;
      width: 20%;
      border-radius: 10px;
      position: relative;
      transition: background-color 0.3s ease;
    }

    .link-container a:hover {
      background-color: #0056b3;
    }

    .link-container a::after {
      content: attr(data-info);
      position: absolute;
      bottom: 100%;
      left: 50%;
      transform: translateX(-50%);
      padding: 10px;
      background-color: rgba(70, 149, 17, 0.8);
      color: #fff;
      font-size: 14px;
      border-radius: 10px;
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.3s ease;
      text-align: left;
      width: 100%;
      z-index: 1; /* Ensure tooltip is above other elements */
    }

    .link-container a:hover::after {
      opacity: 1;
    }

    /* Profile Styles */
    .profile-wrapper {
      position: fixed;
      top: 20px;
      left: 20px;
      z-index: 3; /* Ensure profile icon is above sidebar */
    }

    .profile-icon {
      font-size: 24px;
      cursor: pointer;
      color: #007bff;
      padding: 5%;
    }

    .sidebar {
      position: fixed;
      top: 0;
      left: -100%; /* Initially hide off-screen */
      width: 260px;
      height: 100vh;
      background-color: rgba(255, 255, 255, 0.5);
      box-shadow: 0 0 100vw rgba(0, 0, 0, 0.1);
      transition: left 0.3s ease-out; /* Ease-out for smooth closing */
      z-index: 2; /* Ensure sidebar is above main content */
      padding: 20px;
    }

    .sidebar.show {
      left: 0; 
    }
 
    .sidebar-header {
      display: flex;
      position: relative;
      align-items: center;
      justify-content: space-between;
      padding: 2%;
      margin-top: 10%;
      margin-bottom: 20px;
    }

    .sidebar-header .close-icon {
        position: relative;
      font-size: 24px;
      cursor: pointer;
      color: #777;
    }

    .sidebar ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .sidebar li {
      margin-bottom: 10px;
      padding: 2%;
    }

    .sidebar a {
      display: block;
      padding: 10px 0;
      text-decoration: none;
      color: #333;
      transition: color 0.3s ease;
    }

    .sidebar a:hover {
      color: #007bff;
    }
  </style>
</head>
<body>
  <div class="profile-wrapper">
    <i class="fas fa-user profile-icon" id="profile-icon"></i>
  </div>

  <div class="sidebar" id="sidebar">
    <div class="sidebar-header">
      <h2>Menu</h2>
      <i class="fas fa-times close-icon" onclick="toggleSidebar()"></i>
    </div>
    <ul>
      <li><a href="#">Dashboard</a></li>
      <li><a href="/user/profile">Profile</a></li>
      <li><a href="/user/contacts">Contacts</a></li>
      <li><a href="#">Settings</a></li>
      <li><a href="/user/logout">Logout</a></li>
      
    </ul>
  </div>
  
  <div class="container">
    <h1>Choose Your Chat Option</h1>
    <div class="link-container">
      <a href="/user/privatechat" data-info="Start or join a private chatroom with room id (required).">Personal Chat</a>
    </div>
    <div class="link-container">
      <a href="/user/chat" data-info="Join a public chat room with no restrictions.">Public Chat</a>
    </div>
  </div>

  <script>
    const profileIcon = document.getElementById("profile-icon");
    const sidebar = document.getElementById("sidebar");

    profileIcon.addEventListener("click", () => {
      sidebar.classList.toggle("show");
    });

    function toggleSidebar() {
      sidebar.classList.toggle("show");
    }

    // Close sidebar when clicking outside of it
    window.addEventListener("click", (event) => {
      if (!sidebar.contains(event.target) && event.target !== profileIcon) {
        sidebar.classList.remove("show");
      }
    });
  </script>
</body>
</html>
